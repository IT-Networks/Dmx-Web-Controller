{
  "appId": "com.itnetworks.dmxcontroller",
  "appName": "DMX Controller",
  "webDir": "frontend",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https",
    "allowNavigation": [
      "*"
    ]
  },
  "android": {
    "buildOptions": {
      "releaseType": "APK"
    }
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#1a1a2e",
      "showSpinner": true,
      "spinnerColor": "#4a90e2"
    }
  }
}
